{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "uv: install",
      "type": "shell",
      "command": "uv pip install -r requirements.txt",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "uv: dev (debugpy)",
      "type": "shell",
      "command": "uv run python -m debugpy --listen 5678 -m uvicorn app.main:app --reload",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Started reloader.*|.*debugpy waiting for client.*",
            "endsPattern": ".*Application startup complete.*|.*Uvicorn running on.*"
          }
        }
      ]
    }
  ]
}